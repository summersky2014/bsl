{
    "compilerOptions": {
        "jsx": "react",
        "noEmitOnError": true,
        "removeComments": true,
        "strict": true,
        "moduleResolution": "node",
        "module": "esnext",
        "target": "esnext",
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "lib": ["dom", "scripthost", "esnext"]
    },
    "exclude": [
        "node_modules",
        ".history",
        ".vscode"
    ],
    "include": [
        "examples",
        "components",
        "utils",
        "app",
        "task",
        "typings",
        "hooks",
        "docs",
        "styles"
    ],
    "files": [
        "webpack.config.ts"
    ]
}