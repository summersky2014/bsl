{
    "compilerOptions": {
        "jsx": "react",
        "noEmitOnError": true,
        "removeComments": false,
        "strict": true,
        "sourceMap": false,
        "inlineSources": false,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2015",
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "noUnusedLocals": true,
        "outDir": "./build/__tests__"
    },
    "exclude": [
        "node_modules",
        ".history",
        ".vscode"
    ],
    "include": [
        "tests"
    ]
  }